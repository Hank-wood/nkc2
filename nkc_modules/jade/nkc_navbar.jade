style.
  .navbar {
    margin-bottom:15px;
  }

//nav.navbar.navbar-default
div
  .container-fluid
    .row(style='background-color:#f3f3f3;margin-bottom: 10px; padding-bottom: 3px;border-bottom-color: rgb(221, 221, 221); border-bottom-width: 1px; border-bottom-style: solid;')
      .col-xs-12.col-sm-2
      
        div.text-center(style='margin-top:9px; margin-bottom:0px')
          a.f16(href='/' style='text-decoration: none;') #{data.site.name}
      
      .col-xs-12.col-sm-4
        ul.pagination(style='margin-top:8px; margin-bottom:0px')
          li(class="#{data.navbar.highlight=='tools'?'active':''}")
            a 工具
          li(class="#{data.navbar.highlight=='tutorial'?'active':''}")
            a 教学
          li(class="#{data.navbar.highlight=='editor'?'active':''}")
            a(href='/e') 发帖
          li(class="#{data.navbar.highlight=='uploader'?'active':''}")
            a(href='/interface/uploader') 上传
      
      .col-xs-8.col-sm-4
        .row(style='margin-top:8px;')
          .col-xs-9(style='padding-right:0px')
            input.form-control(type='text',placeholder='搜索' style='')
          .col-xs-3(style='padding-left:4px;')
            button.btn.btn-default(style='float:left') 搜索
      
      .col-xs-4.col-sm-2
        .row.f12.text-center
          if data.user
            .col-xs-12(style='margin:13px 0;')
              a(href='/me') #{data.user.username}
              text &nbsp;&nbsp;
              a(href='/logout') 登出
          else
            .col-xs-12(style='margin:13px 0;')
              a(href='/login') 登录
          
