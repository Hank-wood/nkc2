extends bootstrap_base.jade

block title
  title 注册
  
block styles
  include nkc_styles.jade
  
block content
  include nkc_navbar.jade
  
  .container
    .row
      .col-sm-12.col-md-9
        h1 注册
        p 欲于科创论坛交流，请先注册一个账号。
        hr
        .form-horizontal()
          .form-group
            label.control-label.col-sm-3 用户名
            .col-sm-6
              input#username.form-control(type='text' placeholder='字母、数字、汉字，区分大小写')
              
          .form-group
            label.control-label.col-sm-3 密码
            .col-sm-6
              input#password.form-control(type='password' placeholder='密码')
            
          .form-group
            label.control-label.col-sm-3 再次输入密码
            .col-sm-6
              input#password2.form-control(type='password' placeholder='重复一次')
        
          .form-group
            .col-sm-offset-2.col-sm-10
              //offset 2 grids
              button.btn.btn-default(onclick='register_submit()') 提交
      
      .col-sm-6
        .panel.panel-default
          .panel-body
            p Currently under construction
    .row
      hr
    include debug_output.jade
    
block scripts
  script(src='/interface_common.js')
  script(src='/interface_user_register.js')

      
                
