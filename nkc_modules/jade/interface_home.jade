extends bootstrap_base.jade

block title
  title #{data.site.name} - #{data.site.description}

block content        
  .container
    .row
      each f,index in data.forums
        .col-md-3.col-xs-6.col-sm-4
          .HomeForumTitlePrimary
            a.f16(href='/forum/#{f._key}') #{f.display_name}
          .HomeForumTitleSecondary
            if f.count_posts_today > 0
              span.lighttext 今 #{f.count_posts_today||""}
          hr.hrNarrowSpace
          each thread,index in f.threads
            .HomeThreadItem.f12
              - var avatar = '/avatar/' + thread.oc.uid
              .HomeThreadAvatarPosition
                a(href='/thread/#{thread._key}')
                  img.avatar.HomeThreadAvatar(src='#{avatar}')
                
              .HomeThreadText
                a(href='/thread/#{thread._key}')
                  span #{thread.oc.t} 
              .HomeThreadTextRightAlign
                if thread.count>1
                  span.lighttext.reddish.f12 #{thread.count-1} 復
                //span.lighttext.rightalign #{fromNow(thread.lm.toc)}
              
                
              
  include debug_output.jade
