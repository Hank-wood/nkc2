extends bootstrap_base.jade

block title
  title meh!
  
block styles
  include nkc_styles.jade
  
  style.
    .marginless {
      margin-top:7px;
      margin-bottom:7px;
      margin-right:15px;
    }

block content
  include nkc_navbar.jade
        
  .container
    .row
      .col-md-9
        //split 9/12 for post area
          
        .panel.panel-default
          .panel-body(style='padding-bottom:0px;')
            .row
              .col-md-12
                img(src='http://bbs.kechuang.org/themes/site/dingzhi/images/logo.png')
            .row
              .col-md-8
                p.
                  火箭理论，DIY与实验技术，全球火箭爱好者最新动态、民营航天领域新动向交流。涉及燃料的内容请发在火箭燃料版。
                a.btn.btn-default(href='/interface/editor?target=#{replytarget}') 发帖
              .col-md-4
                p.
                  今日：43 主题：3563 总帖：66652
                p.
                  版主：#[a 彩虹之巅，法式油炸薯条]
                
            .row
              .col-md-12
                nav
                  ul.pagination.marginless
                    each val,index in [1,2,3,4,5,6,'>>']
                      if index==0
                        li.active
                          a(href='#')=val
                      else
                        li
                          a(href='#')=val
                  ul.pagination.marginless
                    each val,index in ['所有','精华']
                      if index==0
                        li.active
                          a(href='#')=val
                      else
                        li
                          a(href='#')=val
              
                  ul.pagination.marginless
                    each val,index in ['回复序','发布序']
                      if index==0
                        li.active
                          a(href='#')=val
                      else
                        li
                          a(href='#')=val
                
                  
          ul.list-group
            each thread,index in data.threads
              
              - var url = '/interface/thread/' + thread._key
              - var avatar = 'http://bbs.kechuang.org/windid/attachment/avatar/000/00/00/10_small.jpg'
              
              li.list-group-item(style='padding:8px;padding-left:15px;')
                .media
                  .media-left.media-middle
                    a(href='#')
                      img.media-object.avatar(src='#{avatar}' style='width:45px;height:45px;')
                  .media-body.media-middle
                    .row
                      .col-xs-8
                        a(href="#{url}") #[b #{thread.oc.t}] 
                        p.lighttext #{dateString(thread.oc.toc)} 虎哥
                      
                      .col-xs-4
                        p.lighttext #{dateString(thread.lm.tlm)} novakon
                        
          .panel-body
            a.btn.btn-default(href='/interface/editor?target=#{replytarget}') 发帖                 
      
  include debug_output.jade
