- var url = '/thread/' + thread._key
- var ocuser = thread.ocuser||{}
- var lmuser = thread.lmuser||{}
- var oc = thread.oc
- var avatar = '/avatar_small/' + oc.uid
- var uid = oc.uid
- var digest = thread.digest
.ForumThreadItem
  .ForumThreadItemAvatar
    a(href='#{url}')
      img.ForumThreadAvatar(src='#{avatar}')
  .ForumThreadItemContent
    div
      if digest
        //span.f12.ForumThreadDigestText [精]
        a.f12.ForumThreadDigestText(href="#{url}") #{oc.t} 
      else
        a.f12(href="#{url}") #{oc.t} 
      //帖子标题链接
    
    div
      span.lighttext.ForumThreadItemCreationTime #{dateString(thread.toc)}
      span.lighttext.ForumThreadItemUsername #{ocuser.username}
      //帖子发布时间和发布者

  span.ForumThreadItemReplyCount #{thread.count-1?thread.count-1:''}
  
      //楼数
  .ForumThreadItemReplyInfo
    span.lighttext.text-center #{fromNow(thread.tlm)}
      //帖子最后回复时间和回复者

    span.lighttext.text-center #{lmuser.username}
