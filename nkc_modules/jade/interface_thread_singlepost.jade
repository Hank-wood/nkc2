if(index==0)
else
  //horizontal line
  hr
  
//post itself
.parent.clearfix
  .avatar-left
    a(href='#')
      img.media-object.avatar(src='/avatar/#{post.uid}' style='max-width:initial;width:60px;height:60px;')
  
  .content-right
    if(post.t&&post.t!=''&&index!=0)
      h4.d-inline.dirt #{post.t}
    p.d-inline.lighttext #{post.username} - #{fromNow(post.toc)} - #{dateString(post.toc)}
    div.f12.post-body
      //body of post
      case post.l
        when 'markdown'
          div!= markdown(post.c)
        when 'bbcode'
          div!= bbcode(post.c)
        when 'plain'
        default
          div!= plain(post.c)
            
